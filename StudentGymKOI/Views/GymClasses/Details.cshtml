@model StudentGymKOI.Models.GymClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>GymClass</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxMembers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxMembers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentMembers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentMembers)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Gym Staff"))
    {
        
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }

    @if (User.IsInRole("Member"))
    {
        bool joined = false;

        foreach (var userGymClass in ViewBag.UserGymClasses)
        {
            if (userGymClass.Id == Model?.Id)
            {
                joined = true;
                break;
            }
        }

        if (joined)
        {
            <span>Joined (</span>
            <a class="text-danger" asp-controller="UserGymClasses" asp-action="LeaveGymClass" asp-route-gymClassID="@Model?.Id">Leave</a>
            <span>)</span>
        }
        else
        {
            if(Model?.CurrentMembers < Model?.MaxMembers)
            {
                
                <a asp-controller="UserGymClasses" asp-action="JoinGymClass" asp-route-gymClassID="@Model?.Id">Join</a>
            }
            else
            {
                <span>Class Full</span>
            }
        }
        
    }

    <a asp-action="Index">Back to List</a>
</div>
